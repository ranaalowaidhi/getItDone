<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="16sp"
    android:layout_marginEnd="16sp"
    android:layout_marginTop="16sp"
    android:elevation="10sp"
    android:background="@drawable/card_bg_shape"
    android:outlineSpotShadowColor="@color/blue"
    android:layout_height="wrap_content">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/task_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/task_cat_tag_color"
                android:layout_width="8dp"
                android:layout_height="0dp"
                android:src="@drawable/cat_tag_personal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/task_check_box"
                android:layout_width="30dp"
                android:layout_height="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_not_checked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/task_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black_400"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/task_cat_tag_color"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="task title" />

            <TextView
                android:id="@+id/task_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black_400"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/task_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/task_date_tv"
                tools:text="task title" />

            <TextView
                android:id="@+id/task_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5sp"
                android:fontFamily="@font/cairo_semibold"
                android:paddingBottom="8sp"
                android:textColor="@color/black_400"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/task_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/task_title_tv"
                tools:text="date" />


        </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>