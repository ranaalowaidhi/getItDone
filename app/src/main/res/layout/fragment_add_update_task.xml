<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFEFF"
    tools:context=".home.MainActivity"
    android:id="@+id/fragmentDatCon">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:background="@drawable/app_top_bar"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/cairo_bold"
            android:text="@string/add_new_task"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:layout_marginTop="36dp"
        android:background="#FDFEFF"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/task_in_lo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:elevation="10sp"
                android:hint="@string/task"
                android:outlineSpotShadowColor="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/task_in_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_semibold"
                    android:inputType="text"
                    android:textColor="@color/black_400"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/desc_in_lo"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="20sp"
                android:hint="@string/description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/desc_in_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_semibold"
                    android:inputType="text"
                    android:textColor="@color/black_400"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="10sp">

                    <LinearLayout
                        android:id="@+id/personal_cat_task"
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/cat_bg_shape"
                        android:backgroundTint="@color/white"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineSpotShadowColor="@color/blue">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="match_parent"
                            android:paddingTop="8sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_profile"
                            app:tint="@color/pink" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/personal"
                            android:textColor="@color/pink"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/shopping_cat_task"
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/cat_bg_shape"
                        android:backgroundTint="@color/white"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineSpotShadowColor="@color/blue">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="match_parent"
                            android:paddingTop="8sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_shopping"
                            app:tint="@color/yellow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10sp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/shopping"
                            android:textColor="@color/yellow"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/work_cat_task"
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/cat_bg_shape"
                        android:backgroundTint="@color/white"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineSpotShadowColor="@color/blue">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="match_parent"
                            android:paddingTop="8sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_work"
                            app:tint="@color/green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="work"
                            android:textColor="@color/green"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/habit_cat_task"
                        android:layout_width="120sp"
                        android:layout_height="40sp"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/cat_bg_shape"
                        android:backgroundTint="@color/white"
                        android:elevation="10sp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:outlineSpotShadowColor="@color/blue">

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="match_parent"
                            android:paddingTop="8sp"
                            android:paddingBottom="8sp"
                            android:src="@drawable/ic_habit"
                            app:tint="@color/orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6sp"
                            android:layout_marginEnd="10sp"
                            android:fontFamily="@font/cairo_semibold"
                            android:text="@string/habit"
                            android:textColor="@color/orange"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/date_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/date"
                    android:textColor="@color/black_400"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:layout_marginTop="3sp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textSize="18sp"
                    tools:text="12/ew/2332" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14sp"
                android:layout_marginTop="25sp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/map_btn"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/blue" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_bold"
                    android:text="@string/location"
                    android:textColor="@color/black_400"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/location_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:fontFamily="@font/cairo_semibold"
                    android:textColor="#8A8A8A"
                    android:textSize="18sp"
                    android:text="Click To Open The Map" />


            </LinearLayout>

            <TextView
                android:id="@+id/location_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:fontFamily="@font/cairo_semibold"
                android:textColor="@color/black_400"
                android:textSize="18sp"
                tools:text="@string/location" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_task_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:fontFamily="@font/cairo_semibold"
                android:padding="8sp"
                android:text="@string/save" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>